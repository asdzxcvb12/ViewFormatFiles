<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.test1.safezone_project.SafeZone_ParentPage"
    android:background="@drawable/wb"
    android:gravity="center_horizontal">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/weather2"
        android:layout_marginRight="59dp"
        android:layout_marginEnd="59dp"
        android:src="@drawable/bb"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="74dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/weather1"
        android:src="@drawable/gb"
        android:layout_marginRight="53dp"
        android:layout_marginEnd="53dp"
        android:layout_alignBottom="@+id/weather2"
        android:layout_toLeftOf="@+id/weather2"
        android:layout_toStartOf="@+id/weather2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="동네 예보"
        android:id="@+id/textView33"
        android:layout_below="@+id/weather1"
        android:layout_alignLeft="@+id/weather1"
        android:layout_alignStart="@+id/weather1"
        android:layout_alignRight="@+id/weather1"
        android:layout_alignEnd="@+id/weather1"
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="중기 예보"
        android:id="@+id/textView34"
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_below="@+id/weather1"
        android:layout_toRightOf="@+id/weather1"
        android:layout_alignRight="@+id/weather2"
        android:layout_alignEnd="@+id/weather2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="동네 예보 : 현재를 기준으로 3일 뒤의 날씨를 보여줍니다. \n중기 예보 : 3일 뒤 부터 15일 까지의 날씨를 보여줍니다."
        android:id="@+id/textView35"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
