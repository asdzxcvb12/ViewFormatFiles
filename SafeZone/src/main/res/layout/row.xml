<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <ImageView
        android:id="@+id/listImg"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/abc_btn_radio_to_on_mtrl_015" />

    <TextView
        android:id="@+id/listMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NickName"
        android:textColor="#000"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/listImg"
        android:layout_toEndOf="@+id/listImg"
        android:layout_marginLeft="37dp"
        android:layout_marginStart="37dp"
        android:paddingTop="20dp" />

    <TextView
        android:id="@+id/eMail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:text="E-Mail"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignBottom="@+id/listImg"
        android:layout_alignLeft="@+id/listMenu"
        android:layout_alignStart="@+id/listMenu"
        android:paddingBottom="20dp"
        android:textSize="15dp" />

</RelativeLayout>